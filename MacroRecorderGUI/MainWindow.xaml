<Window x:Class="MacroRecorderGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroRecorderGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button x:Name="StartRecordButton" Content="StartRecord" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="StartRecord_Click"/>
        <Button x:Name="StopRecordButton" Content="StopRecord" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Click="StopRecordButton_Click"/>
        <Button x:Name="InjectButton" Content="Inject" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="75" Click="InjectButton_Click"/>
        <ListBox x:Name="listBox" Margin="90,10,10,10">
            
        </ListBox>
        <Button x:Name="AddEvent" Content="AddEvent" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="75" Click="AddEvent_Click"/>

    </Grid>
</Window>
