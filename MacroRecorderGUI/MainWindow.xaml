<Window x:Class="MacroRecorderGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroRecorderGUI"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">

    <Window.Resources>
        <RoutedUICommand x:Key="StartRecord" Text="Ctrl+Q StartRecord" />
        <RoutedUICommand x:Key="StopRecord" Text="Ctrl+W StopRecord" />
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource StartRecord}" 
                        Executed="StartRecord_Click" />
        <CommandBinding Command="{StaticResource StopRecord}" 
                        Executed="StopRecordButton_Click" />
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Key="Q" Modifiers="Ctrl" Command="{StaticResource StartRecord}" />
        <KeyBinding Key="W" Modifiers="Ctrl" Command="{StaticResource StopRecord}" />
    </Window.InputBindings>

    <Grid>
        <Button x:Name="StartRecordButton" Content="Start Record" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Command="{StaticResource StartRecord}"/>
        <Button x:Name="StopRecordButton" Content="Stop Record" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="75" Command="{StaticResource StopRecord}"/>
        <Button x:Name="InjectButton" Content="Inject Events" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="75" Click="InjectButton_Click"/>
        <Button x:Name="RemoveEvent" Content="Remove Event" HorizontalAlignment="Left" Margin="10,85,0,0" VerticalAlignment="Top" Width="75" Click="RemoveEvent_Click"/>
        <Button x:Name="ClearEventsList" Content="Clear" HorizontalAlignment="Left" Margin="10,110,0,0" VerticalAlignment="Top" Width="75" Click="ClearList_Click"/>
        <ListBox x:Name="EventsListBox" Margin="90,10,10,10" SelectionMode="Extended"/>
    </Grid>
</Window>
