<Window x:Class="MacroRecorderGUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroRecorderGUI"
        mc:Ignorable="d"
        Title="Macro Recorder" Height="600" Width="800">

    <Window.Resources>
        <RoutedUICommand x:Key="StartRecord" Text="Ctrl+Q StartRecord" />
        <RoutedUICommand x:Key="StopRecord" Text="Ctrl+W StopRecord" />
        <RoutedUICommand x:Key="PlayEvents" Text="Ctrl+E PlayEvents" />
    </Window.Resources>

    <Window.CommandBindings>
        <CommandBinding Command="{StaticResource StartRecord}" 
                        Executed="StartRecord_Click" />
        <CommandBinding Command="{StaticResource StopRecord}" 
                        Executed="StopRecord_Click" />
        <CommandBinding Command="{StaticResource PlayEvents}" 
                        Executed="PlayEvents_Click" />
    </Window.CommandBindings>

    <Window.InputBindings>
        <KeyBinding Key="Q" Modifiers="Ctrl" Command="{StaticResource StartRecord}" />
        <KeyBinding Key="W" Modifiers="Ctrl" Command="{StaticResource StopRecord}" />
        <KeyBinding Key="E" Modifiers="Ctrl" Command="{StaticResource PlayEvents}" />
    </Window.InputBindings>

    <Grid>
        <Button x:Name="StartRecordButton" Content="Start Record" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" Command="{StaticResource StartRecord}"/>
        <Button x:Name="StopRecordButton" Content="Stop Record" HorizontalAlignment="Left" Margin="10,35,0,0" VerticalAlignment="Top" Width="100" Command="{StaticResource StopRecord}"/>
        <Button x:Name="PlayEvents" Content="Play Events" HorizontalAlignment="Left" Margin="10,60,0,0" VerticalAlignment="Top" Width="100" Click="PlayEvents_Click"/>
        <Separator HorizontalAlignment="Left" Height="1" Margin="10,85,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="RemoveEvent" Content="Remove Selected" HorizontalAlignment="Left" Margin="10,91,0,0" VerticalAlignment="Top" Width="100" Click="RemoveEvent_Click" ToolTip="Or press Delete key on the Event list"/>
        <Button x:Name="ClearEventsList" Content="Clear Event List" HorizontalAlignment="Left" Margin="10,116,0,0" VerticalAlignment="Top" Width="100" Click="ClearList_Click"/>
        <Separator HorizontalAlignment="Left" Height="1" Margin="10,141,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="ChangeDelays" Content="Change Delays" HorizontalAlignment="Left" Margin="10,147,0,0" VerticalAlignment="Top" Width="100" Click="ChangeDelays_Click"/>
        <ListBox x:Name="EventsListBox" Margin="115,10,10,31" SelectionMode="Extended" KeyDown="EventsListBox_OnKeyDown"/>
        <TextBox x:Name="DelayTextBox" PreviewTextInput="AllowOnlyNumbersInTextBox" HorizontalAlignment="Left" Height="23" Margin="10,172,0,0" TextWrapping="Wrap" Text="5000" VerticalAlignment="Top" Width="78"/>
        <TextBlock x:Name="MicroSecondsTextBlock" HorizontalAlignment="Left" Margin="93,173,0,0" TextWrapping="Wrap" Text="μs" VerticalAlignment="Top" Width="17" RenderTransformOrigin="-0.118,5.514"/>
        <Separator HorizontalAlignment="Left" Height="1" Margin="10,200,0,0" VerticalAlignment="Top" Width="100"/>
        <Button x:Name="SaveEvents" Content="Save to File" HorizontalAlignment="Left" Margin="10,206,0,0" VerticalAlignment="Top" Width="100" Click="SaveEvents_Click"/>
        <Button x:Name="LoadEvents" Content="Load from File" HorizontalAlignment="Left" Margin="10,231,0,0" VerticalAlignment="Top" Width="100" Click="LoadEvents_Click"/>
        <TextBlock x:Name="Instructions" HorizontalAlignment="Left" Margin="115,0,0,10" TextWrapping="Wrap" Text="Global shortcuts: [Ctrl+Q Start Record] [Ctrl+W Stop Record] [Ctrl+E Play Events]" VerticalAlignment="Bottom"/>
    </Grid>
</Window>
